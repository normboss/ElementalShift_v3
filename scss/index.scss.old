@import "common";
@import url("https://fonts.googleapis.com/css?family=Delius|Eagle+Lake|Griffy|Metal+Mania|Tillana");

body {
    width: 100%; //70%;
    margin: 0 auto;
}
.hamburger {
    width: 50px;
    height: 5px;
    background-color: black;
    margin: 6px 0;
}

main {
    text-align: center;

    .header-block {

        /*        .left-half {
                    grid-column: 1 / span 1;
                    background-image: linear-gradient(to right, #DEF7E6, #ECF4E9, #EDF4EA, #FEFFFF);        
                }*/

        /*box-shadow: 0px 0px 10px 20px rgba(153, 204, 153, .2);*/
        /*border-radius: 20px;*/

        .text {
            /*border: 3px solid red;*/
            width: 100%;
            height: 540px;
            /*background-color: rgba(153, 204, 153, .2);*/
            $opacity: 1;

            background-image: linear-gradient(
                to right,
                /* #99CC99 */ rgba(153, 204, 153, 1),
                /* #ECF4E9 */ rgba(236, 244, 233, 1),
                /* #EDF4EA */ rgba(237, 244, 234, 1),
                /* #FEFFFF */ rgba(254, 255, 255, 1),
                /* #FEFFFF */ rgba(254, 255, 255, 1),
                /* #EDF4EA*/ rgba(237, 244, 234, 1),
                /* #ECF4E9 */ rgba(236, 244, 233, 1),
                /* #99CC99 */ rgba(153, 204, 153, 1)
            );

            background-image: linear-gradient(
                to right,
                /*#DEF7E6,*/ rgba(222, 247, 230, $opacity),
                /*#ECF4E9,*/ rgba(236, 244, 233, $opacity),
                /*#EDF4EA,*/ rgba(237, 244, 234, $opacity),
                /*#FEFFFF,*/ rgba(254, 255, 255, $opacity),
                /*#FEFFFF,*/ rgba(254, 255, 255, $opacity),
                /*#FEFFFF,*/ rgba(254, 255, 255, $opacity),
                /*#EDF4EA,*/ rgba(237, 244, 234, $opacity),
                /*#ECF4E9,*/ rgba(236, 244, 233, $opacity),
                /*#DEF7E6*/ rgba(222, 247, 230, $opacity)
            );

            grid-column: 2 / span 1;
            padding-top: 25px;
            padding-bottom: 25px;
            display: flex;
            flex-direction: column;
            align-items: center;
            img {
                width: 300px;
                min-width: 200px;
                @include max-mixin(450px) {
                    width: 250px;
                }
            }
            .image1 {
                // border: 3px solid red;
                width: 450px;
                @include max-mixin(450px) {
                    width: 325px;
                }
            }
        }

        /*        .right-half {
                    grid-column: 3 / span 1;
                    background-image: linear-gradient(to left, #DEF7E6, #ECF4E9, #EDF4EA, #FEFFFF);        
                }*/
    }

    .content {
        $content-height: 750px;
        $horizontal-offset: 50%;
        $break-point1: 700px;
        $break-point2: 450px;
        $break-point3: 400px;
        $small-offset: 15%;
        %red-border {
            border: 0px solid red;
        }

        display: grid;
        grid-template-columns: 2fr 1fr 2fr;
        /*grid-template-rows: repeat(5, 200px);*/
        /*border: 3px solid blue;*/

        width: 100%;
        /*position: absolute;*/
        .box {
            /*border: 3px solid red;*/
            height: 550px;
        }
    }

    .kirsten {
        width: 100%;

        .quote3 {
            /*border: 3px solid red;*/
            @extend %font-quote3;
            text-align: center;
            margin: 0 auto;
            @include max-mixin(1000px) {
                font-size: 48px;
            }
            @include max-mixin(800px) {
                font-size: 36px;
                padding-left: 5%;
                padding-right: 5%;
            }
        }
    }

    /* ********************************************************************************** */
    .lower-content {
        margin: 0 auto;
        height: auto;
        display: flex;
        justify-content: space-between;
        width: 80%;

        @include max-mixin(1000px) {
            flex-direction: column;
        }

        .kirsten-image {
            width: 179px;
            height: 200px;
            @include max-mixin(1000px) {
                margin: 0 auto;
                padding-bottom: 15px;
            }
        }

        .paragraph3,
        .paragraph9 {
            padding-left: 20px;
            padding-top: 5px;
            text-align: left;
        }
        .paragraph3 {
            /*Paragraph 3     Acumen Pro Wide Light 24 pt, 36 px # Holistic Red #703015*/
            @extend %font-paragraph3;
            @include max-mixin(1000px) {
                padding-bottom: 15px;
            }
        }
        .paragraph9 {
            padding-right: 10px;
            /*Paragraph 9 	Acumen Pro Regular 24 pt, 36 px. # 83653b*/
            /*@extend %font-paragraph9;*/
            @extend %font-paragraph1;
            .kirsten-signature {
                /*border: 2px solid red;*/
                text-align: right;
                padding-right: 40px;
            }

            #moretext {
                color: #957A2B;
            }
            @include max-mixin(500px) {
                width: 90%;
                padding-left: 5%;
            }
        }
    }

    .appointment-block {
        width: 50%;
        margin: 0 auto;
        /*        background-color: rgba(153, 204, 153, .2);
                box-shadow: 0px 0px 10px 20px rgba(153, 204, 153, .2);
                border-radius: 20px;*/
        @extend %green-background;
    }
}
